<h1>Menu</h1>

<div class="row">
  <% @recipes.all.each do |recipe| %>
    <div class="card" style="width:300px; margin: 15px">
      <%= image_tag (recipe.image), class: 'card-img-top' %>
      <div class="card-body">
        <h4 class="card-title"><%= recipe.name %></h4>
        <p style="font-size: small"><i>
        <% recipe.ingredients.each do |ingredient| %>
          <%= ingredient.name %>
        <% end %>
        </i></p>
        <p class="card-text" align="right">$ <%= recipe.price %></p>
        <div class="row">
          <div class="col-sm-5">
            <% if customer_signed_in? %>
              <%= link_to 'Add to Cart <i class="fas fa-shopping-cart"></i>'.html_safe, root_path, class: 'btn btn-success' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>